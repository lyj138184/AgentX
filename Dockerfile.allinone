RUN printf '#!/bin/bash\n\necho "ğŸ‰ Welcome to AgentX All-in-One!"\necho "================================"\necho ""\necho "ğŸ”§ Initializing system..."\n\n# å¯åŠ¨åº”ç”¨\n/app/start-agentx.sh &\nAPP_PID=$!\n\n# ç­‰å¾…æœåŠ¡å¯åŠ¨\necho "â³ Waiting for services to start (this may take 2-3 minutes)..."\nsleep 30\n\n# æ£€æŸ¥æœåŠ¡çŠ¶æ€\nfor i in {1..60}; do\n    if curl -s http://localhost:3000 >/dev/null 2>&1; then\n        echo ""\n        echo "âœ… All services are ready!"\n        echo ""\n        echo "ğŸŒ Access URLs:"\n        echo "   Frontend:  http://localhost:3000"\n        echo "   Backend:   http://localhost:8088/api"\n        echo "   Database:  postgresql://agentx_user:agentx_pass@localhost:5432/agentx"\n        echo ""\n        echo "ğŸ‘¤ Default Accounts:"\n        echo "   Admin: admin@agentx.ai / admin123"\n        echo "   User:  test@agentx.ai / test123"\n        echo ""\n        echo "ğŸ“š Documentation: https://github.com/lucky-aeon/agentx"\n        echo "ğŸ†˜ Support: https://github.com/lucky-aeon/agentx/issues"\n        echo ""\n        break\n    fi\n    \n    if [ $((i %% 10)) -eq 0 ]; then\n        echo "   Still starting... ($i/60)"\n    fi\n    sleep 3\ndone\n\n# ä¿æŒå®¹å™¨è¿è¡Œ\nwait $APP_PID\n' > /docker-entrypoint.sh

